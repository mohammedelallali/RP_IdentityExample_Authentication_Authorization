@page
@model RP_IdentityExample.Pages.Account.RegisterModel
@{
}

<h1>Registration of the user</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterViewModel.Email" class="control-label"></label>
                <input asp-for="@Model.RegisterViewModel.Email" class="form-control" />
                <span asp-validation-for="@Model.RegisterViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterViewModel.Password" class="control-label"></label>
                <input asp-for="@Model.RegisterViewModel.Password" class="form-control" />
                <span asp-validation-for="@Model.RegisterViewModel.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.RegisterViewModel.ConfirmPassword" class="control-label"></label>
                <input asp-for="@Model.RegisterViewModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.RegisterViewModel.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

