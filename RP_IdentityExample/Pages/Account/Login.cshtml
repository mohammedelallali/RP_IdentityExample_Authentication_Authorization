@page
@model RP_IdentityExample.Pages.Account.LoginModel
@{
}

<h1>User Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.credential.Username"  class="control-label"></label>
                <input asp-for="@Model.credential.Username"  class="form-control" />
                <span asp-validation-for="@Model.credential.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.credential.Password"  class="control-label"></label>
                <input type="password" asp-for="@Model.credential.Password" class="form-control" />
                <span asp-validation-for="@Model.credential.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
